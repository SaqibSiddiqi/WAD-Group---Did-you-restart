<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- Add button -->
          <!--<a href="/books/add" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Add a User</a> -->
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center">Username</th>
                  <th class="text-center">Name</th>
                  <th class="text-center">Position</th>
                  <th class="text-center">Class</th>
                  <th class="text-center">Edit</th>
                  <th class="text-center">Delete</th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < user.length; count++) { %>
                <tr>
                  <td class="text-center""><%= user[count].userID %></td>
                  <td class="text-center">$<%= user[count].Name %></td>
                  <td class="text-center"><%= user[count].Position %></td>
                  <td class="text-center"><%= user[count].Class %></td>

                  <td class="text-center">
                    <!-- Edit button (following route/books format) -->
                    <a href="/user/<%= user[count]._id %>" class="btn btn-primary"><i class="fa fa-wrench" aria-hidden="true"></i> Edit</a>
                  </td>

                  <td class="text-center">
                    <!-- Delete button -->
                    <a href="/user/delete/<%= user[count]._id %>" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


